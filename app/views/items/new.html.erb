<h1>New Item</h1>
<%= flash_notice %>

<%= form_for(@item) do |f| %>
  <%= f.error_messages %>
  <p><%= f.label :category_id %><br />
    <%= collection_select(:item, :category_id, @current_profile.categories, :id, :name) %>
  </p>
  <%= render :partial => 'form', :object => f %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>