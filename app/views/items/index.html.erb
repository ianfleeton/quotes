<h1>Items</h1>

<table>
  <tr>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><% unless item.first? %>
    <%= link_to 'Up', :action => 'up', :id => item %>
    <% end %></td>
    <td><% unless item.last? %>
    <%= link_to 'Down', :action => 'down', :id => item %>
    <% end %></td>
    <td><%= h item.name %></td>
    <td><%= h item.information %></td>
    <td>Â£<%= h item.price_in_pounds %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

