<%= form_for(@item, html: { class: 'pure-form' }) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :category_id %>
    <br>
    <%= collection_select(:item, :category_id, @current_profile.categories, :id, :name) %>
  </p>
  <p>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :information %>
    <br>
    <%= f.text_area :information %>
  </p>
  <p>
    <%= f.label :price_in_pounds, 'Price' %>
    <br>
    <%= '&pound;'.html_safe + f.text_field(:price_in_pounds, class: 'price') %>
  </p>
  <p>
    <%= f.submit 'Save', class: 'pure-button pure-button-primary' %>
  </p>
<% end %>

<%= link_to 'Back', items_path, class: 'pure-button' %>
