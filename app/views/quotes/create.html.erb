<%= form_tag(send_quote_quote_path(@quote), class: 'pure-form') do %>
  <input type="hidden" name="id" value="<%= @quote.id %>" />
  <input type="button" onclick="history.back()" value="Make Changes" class="pure-button">
  <%= submit_tag 'Send', class: 'pure-button pure-button-primary' %>
<% end %>

<iframe src="/quotes/<%= @quote.id %>/preview"></iframe>
